@model PiranhaCMS.PublicWeb.Models.ViewModels.IPageViewModel<PiranhaCMS.ContentTypes.Pages.Base.IPage>

<div class="container-fluid bg-secondary ps-5 pe-0 d-none d-lg-block">
    <div class="row gx-0">
        <div class="col-md-6 text-center text-lg-start mb-2 mb-lg-0">
            <div class="d-inline-flex align-items-center">
                @foreach (var item in Model.Header.TopLinks)
                {
                    <partial name="Partial/_LinkButton" model="@item" />
                }
            </div>
        </div>
        <div class="col-md-6 text-center text-lg-end">
            <div class="position-relative d-inline-flex align-items-center bg-primary text-white px-5">
                @if (!string.IsNullOrEmpty(Model.GlobalSettings.EmailAddress))
                {
                <div class="me-3 pe-3 border-end py-2">
                    <p class="m-0">
                        <i class="fa fa-envelope-open me-2"></i>
                        <a class="link-light" href="mailto:@Model.GlobalSettings.EmailAddress">@Model.GlobalSettings.EmailAddress</a>
                    </p>
                </div>
                }
                @if (!string.IsNullOrEmpty(Model.GlobalSettings.PhoneNumber))
                {
                <div class="py-2">
                    <p class="m-0">
                        <i class="fa fa-phone-alt me-2"></i>
                        <a class="link-light" href="tel:@Model.GlobalSettings.PhoneNumber.Replace(" ", "")">@Model.GlobalSettings.PhoneNumber</a>
                    </p>
                </div>
                }
            </div>
        </div>
    </div>
</div>
