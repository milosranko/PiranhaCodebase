@model PiranhaCMS.PublicWeb.Models.ViewModels.NotFoundPageViewModel

<div class="container">
    <h1>@Model.CurrentPage.Title</h1>

    @if (Model.CurrentPage.PageRegion?.Heading != null)
    {
        <h2>@Model.CurrentPage.PageRegion.Heading</h2>
    }

    @if (Model.CurrentPage.PageRegion?.LeadText != null)
    {
        <p>@Model.CurrentPage.PageRegion.LeadText</p>
    }

    @if (Model.CurrentPage.PageRegion?.MainContent != null)
    {
        @Html.Raw(Model.CurrentPage.PageRegion.MainContent)
    }
</div>
