@model PiranhaCMS.PublicWeb.Models.ViewModels.ArticlePageViewModel
@{
    ViewBag.Title = Model.CurrentPage.Title;
}

<div class="container-fluid py-6 px-5">
    <div class="row g-5">
        <div class="col-lg-8">
            <div class="mb-5">
                @if (Model.CurrentPage.PrimaryImage?.Media != null)
                {
                    <img
                        class="img-fluid w-100 mb-5"
                        src="@Url.Content(Model.CurrentPage.PrimaryImage.Media.PublicUrl)"
                        alt="@Model.CurrentPage.PrimaryImage.Media.AltText" />
                }

                @if (Model.CurrentPage.PageRegion?.Heading != null)
                {
                    <h1 class="mb-4">@Model.CurrentPage.PageRegion.Heading</h1>
                }

                @if (Model.CurrentPage.PageRegion?.LeadText != null)
                {
                    <h2 class="text-primary mb-4">@Model.CurrentPage.PageRegion.LeadText</h2>
                }

                @if (Model.CurrentPage.PageRegion?.MainContent != null)
                {
                    @Html.Raw(Model.CurrentPage.PageRegion.MainContent)
                }
            </div>
        </div>
        <div class="col-lg-4">
            <div class="mb-5">
                <div class="input-group">
                    <input type="text" class="form-control p-3" placeholder="Keyword">
                    <button class="btn btn-primary px-4"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>

@if(Model.SubMenu != null && Model.SubMenu.Any())
{
    <div class="container">
        @foreach (var item in Model.SubMenu)
        {
            <span>
                <a href="@item.Link">@item.Name</a>
            </span>
        }
    </div>
}

@Html.DisplayFor(m => m.CurrentPage.Blocks)
