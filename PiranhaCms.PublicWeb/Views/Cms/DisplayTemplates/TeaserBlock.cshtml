@using PiranhaCMS.Common.Extensions
@using PiranhaCMS.PublicWeb.Models.Enums;
@using PiranhaCMS.PublicWeb.Models.Pages
@model PiranhaCMS.PublicWeb.Models.Blocks.TeaserBlock
@{
    var textColumnIndex = Model.ImagePosition.Value == ImagePositionEnum.Left ? 2 : 1;
    var imageColumnIndex = Model.ImagePosition.Value == ImagePositionEnum.Right ? 2 : 1;
}

<div class="container-fluid bg-secondary p-0">
    <div class="row g-0">
        <div class="col-lg-6 order-@imageColumnIndex" style="min-height: 400px;">
            <div class="position-relative h-100">
                @if (Model.Image != null && Model.Image.HasValue)
                {
                    <img class="position-absolute w-100 h-100"
                         style="object-fit: cover;"
                         src="@Model.Image.GetSrc(800)"
                         srcset="@Model.Image.GetSrcSet(800, 1200, 1920)"
                         sizes="100vw"
                         alt="@Model.Image.Media.AltText" />
                }
            </div>
        </div>
        <div class="col-lg-6 order-@textColumnIndex py-6 px-5">
            <h1 class="display-5 mb-4">@Model.Heading.Value</h1>
            @if (Model.LeadText != null)
            {
                <h4 class="text-primary mb-4">@Model.LeadText.Value</h4>
            }
            @if (Model.MainText != null)
            {
                <p class="mb-4">@Html.Raw(Model.MainText)</p>
            }
        </div>
    </div>
</div>
